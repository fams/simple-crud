{
    "collection_name": "users",
    "schema": {
        "type": "object",
        "properties": {
            "username": {
                "type": "string"
            },
            "email": {
                "type": "string",
                "format": "email"
            },
            "age": {
                "type": "integer",
                "minimum": 0
            },
            "password": {
                "type": "string",
                "minLength": 8
            }
        },
        "required": [
            "username",
            "email",
            "password"
        ]
    }
}